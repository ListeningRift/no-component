{
  "name": "@no-component/root",
  "version": "0.0.0",
  "private": true,
  "description": "Vue3 components.",
  "workspaces": [
    "packages/*",
    "docs",
    "tools/*",
    "play",
    "resolver"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "pnpm run stub",
    "stub": "pnpm run -r --parallel stub",
    "scripts": "pnpm -C tools/scripts",
    "commit": "czg",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "build": "pnpm -C tools/build start",
    "dev": "pnpm -C playground dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint:eslint": "eslint --fix --cache \"**/*.{js,jsx,ts,tsx,vue}\"",
    "lint:prettier": "prettier --write  \"**/*.{js,jsx,ts,tsx,vue}\" --cache",
    "lint:style": "stylelint \"packages/**/*.{css,scss}\" --config .stylelintrc.js --fix",
    "typecheck": "vue-tsc -p tsconfig.dev.json --noEmit",
    "docs:dev": "pnpm -C docs docs:dev",
    "docs:build": "pnpm -C docs docs:build",
    "docs:preview": "pnpm -C docs docs:preview"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.2.5",
    "@no-component/components": "workspace:*",
    "@no-component/composables": "workspace:*",
    "@no-component/constants": "workspace:*",
    "@no-component/directives": "workspace:*",
    "@no-component/utils": "workspace:*",
    "@vue/shared": "^3.2.47",
    "@vueuse/core": "^9.3.0",
    "dayjs": "^1.11.3",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@no-component/build": "workspace:*",
    "@no-component/build-utils": "workspace:*",
    "@no-component/docs": "workspace:*",
    "@no-component/eslint-config": "workspace:*",
    "@no-component/index": "workspace:*",
    "@no-component/resolver": "workspace:*",
    "@no-component/scripts": "workspace:*",
    "@pnpm/find-workspace-packages": "^6.0.7",
    "@testing-library/vue": "^7.0.0",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.182",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "*",
    "@vitejs/plugin-vue": "^4.1.0",
    "commitizen": "^4.2.5",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "czg": "^1.6.1",
    "eslint": "^8.22.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.1",
    "jiti": "^1.18.2",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.0.3",
    "node": "^19.6.1",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "sass": "^1.59.2",
    "stylelint": "^15.6.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.0.0",
    "tsx": "^3.12.6",
    "typescript": "^4.7.4",
    "unplugin-vue-define-options": "^0.10.0",
    "vite": "^4.1.4",
    "vitest": "^0.29.2",
    "vue-tsc": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "czConfig": "./.commitlintrc.js"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix",
    "*.{scss,css}": "stylelint --fix"
  }
}
